# build jar
./mvnw clean package -DskipTests

# create .env locally (do NOT commit)
cp .env.example .env
# edit .env.APP_JWT_SECRET to a long random string (>=32 chars)

# bring up docker
docker compose up --build -d

# check logs
docker compose logs -f app

